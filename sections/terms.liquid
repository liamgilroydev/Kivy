<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-5 mb-5" style="margin-top: 80px;">
                <div class="col">
                    <a href="/pages/shipping-returns"><button class="termsbuttoninactive" style="margin-top: 0px;">Shipping & Returns</button></a>
                </div>
                <div class="col">
                    <button class="termsbutton" style="margin-top: 10px;">Terms</button>
                </div>
                <div class="col">
                    <a href="/pages/privacy-policy"><button class="termsbuttoninactive">Privacy</button></a>
                </div>
                <div class="col">
                    <a href="/pages/cookies-policy"><button class="termsbuttoninactive">Cookies</button></a>
                </div>
                    
            </div>
            
        <div class="col-lg-7 mb-5" style="width: 50%; margin-top: 80px;">
                    <h2 class="termsheader mb-4">{{ section.settings.title }}</h2>
                    <h5 class="termstext mb-4">{{ section.settings.subtitle }}</h5>
                    <p class="termstext mb-5">{{ section.settings.termsinfo }}</p>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Terms-Section",
    "class": "Terms-Section",
    "settings": [

        {
            "type": "text",
            "id": "title",
            "default": "Example Title",
            "label": "Title"
        },

        {
            "type": "text",
            "id": "subtitle",
            "default": "Subtitle",
            "label": "Subtitle"
        },

        {
            "type": "text",
            "id": "termsinfo",
            "default": "Terms Info",
            "label": "Terms Info"
        }

    ],
    "presets": [
        {
            "category": "Collection",
            "name":"Terms Section"
        }
    ]
}
{% endschema %}