<div class="row" style="margin-top: -86px;">
    <div class="col-lg-6 bg-image" style="background-image: url('https://mdbootstrap.com/img/Photos/Others/images/76.jpg');">
    
    </div>
    <div class="col-lg-6" style="padding-left: 8%; padding-right: 8%; padding-top: 15%; margin-bottom: 25%;">
        <h2 class="aboutquote">{{ section.settings.title }}</h2>
        <p class="subtitle mt-3 accordiondescription">{{ section.settings.subtitle }}</p>
        {% form 'contact' %}
            {% if form.posted_successfully? %} Thank you for message, we will be back in touch. {% endif %}
            {{ form.errors | default_errors }}
            <div class="row">
                <div class="col">
                    <input type="text" id="ContactFormName accordiondescription" class="formfield1" placeholder="Name" name="contact[name]">
                </div>
                <div class="col">
                    <input type="email" id="ContactFormEmail accordiondescription" class="formfield1" placeholder="Email" name="contact[email]">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <textarea rows="10" id="ContactFormMessage accordiondescription" class="formfieldmessage" placeholder="Message" name="contact[body]"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <input class="enquirybutton" type="submit" value="Send Enquiry">
                </div>
            </div>
            
        {% endform %}
    </div>
</div>


{% schema %}
{
    "name": "Contact-Page-Section",
    "class": "Contact-Page-Section",
    "settings": [

        {
            "type": "text",
            "id": "title",
            "default": "Example Title",
            "label": "Title"
        },

        {
            "type": "text",
            "id": "subtitle",
            "default": "Example Subtitle",
            "label": "subtitle"
        }

    ],
    "presets": [
        {
            "category": "Collection",
            "name":"Contact Page Section"
        }
    ]
}
{% endschema %}

